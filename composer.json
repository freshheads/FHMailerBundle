{
    "name": "freshheads/mailer-bundle",
    "description": "This bundle sends e-mails with the symfony mailer.",
    "type": "symfony-bundle",
    "keywords": [
        "mail",
        "mailer"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Kevin Schuurmans",
            "email": "kevin.schuurmans@freshheads.com",
            "homepage": "https://freshheads.com",
            "role": "Developer"
        },
        {
            "name": "Misha Klomp",
            "email": "misha.klomp@freshheads.com",
            "homepage": "https://freshheads.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2",
        "symfony/config": "^4.4|^5.0",
        "symfony/console": "^4.4|^5.0",
        "symfony/dependency-injection": "^4.4|^5.0",
        "symfony/http-kernel": "^4.4|^5.0",
        "symfony/mailer": "^4.4|^5.0",
        "symfony/twig-bridge": "^4.4|^5.0",
        "symfony/yaml": "^4.4|^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.4",
        "symfony/debug": "^4.4|^5.0",
        "symfony/phpunit-bridge": "^4.4|^5.0"
    },
    "config": {
        "platform": {
            "php": "7.2.24"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { "FH\\Bundle\\MailerBundle\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "FH\\Bundle\\MailerBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.x-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "support": {
        "issues": "https://github.com/freshheads/FHMailerBundle/issues"
    }
}
